<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.yodian2.tarena.mytravelapplication.Fragment.HotFragment">
    <LinearLayout

        android:focusable="true"
        android:focusableInTouchMode="true"

        android:background="#3BB5FF"
        android:orientation="horizontal"
        android:id="@+id/findsearch"
        android:layout_width="match_parent"
        android:layout_height="47dp">
        <EditText

            android:background="@drawable/bageditext"
            android:hint="请输入您感兴趣的内容"
            android:layout_marginLeft="27dp"
            android:layout_gravity="center_vertical"
            android:layout_width="197dp"
            android:layout_height="37dp" />
        <Button
            android:textColor="#ffffff"
            android:background="#3BB5FF"
            android:id="@+id/btnsearch"
            android:text="go"
            android:layout_width="57dp"
            android:layout_height="wrap_content" />
        <Button
            android:textColor="#ffffff"
            android:background="#3BB5FF"
            android:id="@+id/btnarti"
            android:text="发起吐槽"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lintab"
        android:background="#f0f0f0"
        android:orientation="horizontal"
        android:layout_below="@+id/findsearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.design.widget.TabLayout
        android:layout_gravity="center_vertical"
        app:tabMode="scrollable"
        app:tabIndicatorColor="@null"
        app:tabSelectedTextColor="#E22018"
        android:layout_width="337dp"
        android:layout_height="37dp"
        android:id="@+id/tabmenu"
        android:layout_marginRight="7dp"
        >
        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热点"/>
        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="社会"/>
        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="体育"/>
        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="娱乐"/>
        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="影视"/>
        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="动漫"/>
        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片"/>
    </android.support.design.widget.TabLayout>
        <ImageView
            android:src="@drawable/moretab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"/>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_below="@+id/lintab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>


</RelativeLayout>
